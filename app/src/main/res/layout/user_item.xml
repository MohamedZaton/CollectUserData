<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"

    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="20dp"
    app:cardCornerRadius="10dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"

        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prof_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/boy_1"
            app:civ_border_width="0dp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user_test_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="5sp"
                android:textColor="#3a6f95"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="@string/name_dammy" />

            <TextView
                android:id="@+id/job_user_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="5sp"
                android:textColor="#5b89a8"
                android:textSize="13sp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="@string/job_dammy" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:id="@+id/age_user_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#5b89a8"
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:text="@string/age"
                    android:padding="5dp"
                    />
                <TextView

                    android:id="@+id/gendar_user_txtVw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#5b89a8"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="@string/gender"
                    />

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>
